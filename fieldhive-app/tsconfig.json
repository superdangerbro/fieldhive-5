{
  "compilerOptions": {
    "target": "es2018",
    "module": "esnext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@mobile/*": ["mobile/src/*"],
      "@web/*": ["web/src/*"],
      "@shared/*": ["shared/*"],
      "@schemas/*": ["shared/schemas/*"],
      "@services/*": ["shared/services/*"],
      "@utils/*": ["shared/utils/*"],
      "@tests/*": ["shared/schemas/tests/*"]
    },
    "types": [
      "node",
      "jest"
    ],
    "typeRoots": [
      "./node_modules/@types",
      "./shared/schemas",
      "./jest"
    ],
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "incremental": true,
    "noImplicitAny": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,
    "pretty": true,
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "importHelpers": true,
    "downlevelIteration": true
  },
  "files": [
    "./jest/types.d.ts",
    "./shared/schemas/tests.d.ts"
  ],
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.js",
    "**/*.jsx",
    "**/*.json",
    "**/*.d.ts",
    "jest/**/*"
  ],
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "coverage",
    "**/dist/**",
    "**/build/**"
  ],
  "compileOnSave": false,
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs"
    }
  }
}
